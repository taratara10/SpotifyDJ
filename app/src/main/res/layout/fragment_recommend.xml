<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-28dp"
        tools:layout_editor_absoluteY="132dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!--  Current Track  -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/current_recommend_background"
                app:layout_constraintEnd_toStartOf="@+id/guideline_border_end"
                app:layout_constraintStart_toStartOf="@id/guideline_border_begin"
                app:layout_constraintTop_toTopOf="@id/rv_current_tracks" />

            <TextView
                android:id="@+id/tv_current_tracks_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="曲をタップして追加"
                app:layout_constraintBottom_toBottomOf="@+id/rv_current_tracks"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_begin"
                app:layout_constraintTop_toTopOf="@+id/rv_current_tracks"
                android:visibility="visible" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_current_tracks"
                android:layout_width="0dp"
                android:layout_height="90dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_end"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/guideline_begin"
                app:layout_constraintTop_toTopOf="parent" />


            <!--    Upper Track        -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/upper_recommend_background"
                app:layout_constraintEnd_toStartOf="@+id/guideline_border_end"
                app:layout_constraintStart_toStartOf="@id/guideline_border_begin"
                app:layout_constraintTop_toTopOf="@+id/tv_upper_tracks" />

            <TextView
                android:id="@+id/tv_upper_tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Upper Tracks"
                android:textColor="@color/upper_tracks"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline_begin"
                app:layout_constraintTop_toBottomOf="@id/rv_current_tracks" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_upper_tracks_result"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline_begin"
                app:layout_constraintTop_toBottomOf="@+id/tv_upper_tracks" />

            <TextView
                android:id="@+id/tv_upper_tracks_nothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="該当結果なし"
                app:layout_constraintBottom_toBottomOf="@+id/rv_upper_tracks_result"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_begin"
                app:layout_constraintTop_toTopOf="@+id/rv_upper_tracks_result"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_upper_tracks_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="関連する盛り上がる曲を探します"
                app:layout_constraintBottom_toBottomOf="@+id/rv_upper_tracks_result"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_begin"
                app:layout_constraintTop_toTopOf="@+id/rv_upper_tracks_result"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_upper_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@android:color/holo_green_light"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/rv_upper_tracks_result"
                app:layout_constraintEnd_toEndOf="@id/rv_upper_tracks_result"
                app:layout_constraintStart_toStartOf="@id/rv_upper_tracks_result"
                app:layout_constraintTop_toTopOf="@id/rv_upper_tracks_result" />

        <!--    Downer        -->
            <TextView
                android:layout_width="0dp"
                android:layout_height="220dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/downer_recommend_background"
                app:layout_constraintEnd_toStartOf="@+id/guideline_border_end"
                app:layout_constraintStart_toStartOf="@id/guideline_border_begin"
                app:layout_constraintTop_toTopOf="@+id/tv_downer_tracks" />

            <TextView
                android:id="@+id/tv_downer_tracks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@color/white"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Downer Tracks"
                android:textColor="@color/downer_tracks"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/guideline_begin"
                app:layout_constraintTop_toBottomOf="@+id/rv_upper_tracks_result" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_downer_tracks_result"
                android:layout_width="0dp"
                android:layout_height="200dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline_end"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="@+id/guideline_begin"
                app:layout_constraintTop_toBottomOf="@+id/tv_downer_tracks" />

            <TextView
                android:id="@+id/tv_downer_tracks_nothing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="該当結果なし"
                app:layout_constraintBottom_toBottomOf="@+id/rv_downer_tracks_result"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_begin"
                app:layout_constraintTop_toTopOf="@+id/rv_downer_tracks_result"
                android:visibility="gone" />
            <TextView
                android:id="@+id/tv_downer_tracks_empty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="関連する落ち着いた曲を探します"
                app:layout_constraintBottom_toBottomOf="@+id/rv_downer_tracks_result"
                app:layout_constraintEnd_toEndOf="@+id/guideline_end"
                app:layout_constraintStart_toStartOf="@id/guideline_begin"
                app:layout_constraintTop_toTopOf="@+id/rv_downer_tracks_result"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_downer_progress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@android:color/holo_green_light"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/rv_downer_tracks_result"
                app:layout_constraintEnd_toEndOf="@id/rv_downer_tracks_result"
                app:layout_constraintStart_toStartOf="@id/rv_downer_tracks_result"
                app:layout_constraintTop_toTopOf="@id/rv_downer_tracks_result" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="24dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_border_begin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_begin="12dp" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline_border_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_end="12dp" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
