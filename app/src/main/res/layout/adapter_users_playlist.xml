<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapter_user_playlist"
    android:layout_width="160dp"
    android:layout_height="180dp"
    android:layout_margin="@dimen/margin_8"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/iv_playlist_image"
        android:layout_width="140dp"
        android:layout_height="140dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tv_playlist_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:breakStrategy="simple"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/iv_playlist_image"
        app:layout_constraintStart_toStartOf="@+id/iv_playlist_image"
        app:layout_constraintTop_toBottomOf="@+id/iv_playlist_image"
        app:layout_constraintVertical_bias="0.0"
        tools:text="playlist title" />
</androidx.constraintlayout.widget.ConstraintLayout>
